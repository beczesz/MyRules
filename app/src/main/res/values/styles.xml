<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="DevelInfo" parent="TextView">
        <item name="android:background">@color/devel_data</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Text styles -->
    <style name="TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Header1" parent="TextView">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
    </style>

    <style name="Header2" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Header3" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Paragraph" parent="TextView">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Operator">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/text_dark_bg_primary</item>
        <item name="android:background">@drawable/operator_and</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <!-- Icons -->
    <style name="Icons" parent="TextView">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <!--<item name="android:background">@color/transparent</item>-->
    </style>

    <style name="EditIcons" parent="Icons">
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:text">@string/lbl_edit_item</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/text_dark_bg_primary</item>
    </style>

    <style name="SaveCancelButtons" parent="Button">
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>
    <style name="SaveButton" parent="SaveCancelButtons">
        <item name="android:background">@drawable/save_button</item>
        <item name="android:layout_marginRight">@dimen/padding_xlarge</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
    </style>

    <style name="CancelButton" parent="SaveCancelButtons">
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:layout_marginLeft">@dimen/padding_xlarge</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
    </style>

</resources>
