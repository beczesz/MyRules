<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/group_conatiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/Header2"
                android:id="@+id/operator_text"
                android:layout_width="@dimen/padding_xxxlarge"
                android:gravity="center"
                android:layout_height="match_parent"
                tools:text="A\nN\nD"
                />

            <com.jmedeisis.draglinearlayout.DragLinearLayout
                android:id="@+id/condition_card_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        style="@style/Header3"
        android:id="@+id/default_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/lbl_no_condition_added"
        />

</RelativeLayout>
