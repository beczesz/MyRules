<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_background">

        <LinearLayout
            android:id="@+id/group_conatiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/operator_text"
                style="@style/Operator"
                android:layout_width="@dimen/padding_xxlarge"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xtiny"
                android:gravity="center"
                tools:text="A\nN\nD"/>

            <com.jmedeisis.draglinearlayout.DragLinearLayout
                android:id="@+id/condition_card_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/default_message"
        style="@style/Header3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/lbl_no_condition_added"/>

</RelativeLayout>
